<table class='table table-striped'>
<tr>
  <th>Nom</th>
  <th>Prenom</th>
  <th>Email</th>
  <th>Tél. domicile</th>
  <th>Tél. portable</th>
  <th>Actions</th>
</tr>

{% for member in members %}
<tr>
  <td>
    {{ member.nom }}
  </td>
  <td>{{ member.prenom }}</td>
  <td><a href='mailto:{{ member.email }}'>{{ member.email }}</a></td>
  <td>{{ member.telDomicile }}</td>
  <td>{{ member.telPortable }}</td>
  <td>
    <a href="{{ path('SLNRegisterBundle_member_edit', { id: member.id }) }}" title='Modifier ce membre'>
      <span class="glyphicon glyphicon-pencil"></span></a>
    <a href="{{ path('SLNRegisterBundle_member_delete', { id: member.id }) }}" title='Supprimer ce membre'
         onclick="return confirm('Etes-vous sûr de vouloir effacer le membre {{ member.prenom }} {{ member.nom }} ?');">
      <span class="glyphicon glyphicon-trash"></span></a>
    {% if member.hasRole('ROLE_ADMIN') %}
    <span class="glyphicon glyphicon-wrench" title="Administrateur"></span>
    {% endif %}
  </td>
</tr>
{% endfor %}
</table>

