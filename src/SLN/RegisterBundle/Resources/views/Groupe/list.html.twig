{% extends 'SLNRegisterBundle::layout.html.twig' %}

{% block title %}Liste des groupes de natation{% endblock %}

{% block body %}
<h1>Liste des groupes de natation</h1>

<p><a href="{{ path('SLNRegisterBundle_groupe_create') }}">Ajouter un groupe</a></p>

<table class='register'>
<thead>
<tr>
  <th>Nom</th><th>Description</th><th>Horaires</th><th>Action</th>
<tr>
</thead>
{% for groupe in groupes %}
<tr class='{{ cycle(['odd', 'even'], loop.index0)}}'>
  <td>{{ groupe.nom }}</td>
  <td>{{ groupe.description | nl2br }}</td>
  <td>
  {% for horaire in groupe.getFormatedHoraires %}
    {{ horaire.getJour }},&nbsp;de&nbsp;{{ horaire.getDebut }}&nbsp;à&nbsp;{{ horaire.getFin }}&nbsp;({{ horaire.description }})
    {% if not loop.last %}<br/>{% endif %}
  {% endfor %}
  </td>
  <td><a href="{{ path('SLNRegisterBundle_groupe_edit', {id: groupe.getId}) }}">
      <img src="{{ asset('bundles/slnregister/images/icon_editrow.png') }}" alt='Modifier ce groupe'></a>
      <a href="{{ path('SLNRegisterBundle_groupe_delete', {id: groupe.getId}) }}"
         onclick="return confirm('Etes-vous sûr de vouloir effacer le groupe {{ groupe.nom }} ?');">
      <img src="{{ asset('bundles/slnregister/images/icon_deleterow.gif') }}" alt='Supprimer ce groupe'></a>
   </td>
</tr>
{% endfor %}
</table>

{% endblock %}

