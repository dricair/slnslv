{% extends 'form_div_layout.html.twig' %}

{%- block form_row -%}
    <div>
        {{- form_errors(form) -}}
        {{- form_label(form) -}}
        {{- form_widget(form) -}}
    </div>
{%- endblock form_row -%}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        {%- for error in errors -%}
    <p class='form_error'>{{ error.message }}</p>
        {%- endfor -%}
    {%- endif -%}
{%- endblock form_errors -%}


