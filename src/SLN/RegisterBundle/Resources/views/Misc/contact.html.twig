{% extends 'SLNRegisterBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <h1>Contactez le Stade Laurentin Natation</h1>

    <p>Envoyez nous un message, nous r√©pondrons au plus vite.</p>

    <form action="{{ path('SLNRegisterBundle_contact') }}" method="post" {{ form_enctype(form) }} class="form form-horizontal" role="form">
  
    <div class="panel panel-default">
      <div class="panel-heading">Message</div>
      <div class="panel-body">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-7">
            <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Envoyer" />
          </div>
        </div>
      </div>
    </div>

    </form>    
{% endblock %}
