<form action='{{ path('SLNRegisterBundle_payment_edit', {'user_id': user.id, 'id': id}) }}' method="post" class="form-horizontal" role="form">
  <div class="panel panel-default">
    <div class="panel-heading">{{ title }}</div>
    <div class="panel-body">
      {{ form_row(form.ptype) }}
      {{ form_row(form.description) }}
      {{ form_row(form.value) }}
    </div>
  </div>

  {{ form_rest(form) }}
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
      <input type="submit" class="btn btn-primary" id="_submit" name="_submit" value="Envoyer" />
      <a href='{{ cancel_addr }}' title="Annuler" class="btn btn-primary">Annuler</a>
    </div>
  </div>
</form>
