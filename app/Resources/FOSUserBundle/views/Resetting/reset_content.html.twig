{% trans_default_domain 'FOSUserBundle' %}

<div class="panel panel-default">
  <div class="panel-heading">Changez le mot de passe</div>
  <div class="panel-body">

    <form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" role="form">
      {{ form_widget(form) }}

      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
          <input type="submit" class="btn btn-primary" value="{{ 'resetting.reset.submit'|trans }}" />
        </div>
      </div>
    </form>

  </div>
</div>

