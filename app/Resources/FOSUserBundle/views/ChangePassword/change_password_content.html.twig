{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form form-horizontal" role="form">
  <div class="panel panel-default">
    <div class="panel-heading">Changement de mot de passe</div>
      <div class="panel-body">
        {{ form_widget(form) }}
      </div>
    </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
      <input type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans }}" />
    </div>
  </div>
</form>
