{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form form-horizontal">
  <div class="panel panel-default">  

  <div class="panel panel-default">
    <div class="panel-heading">Modifier les informations de connection</div>
    <div class="panel-body">
      {{ form_row(form.username) }}
      {{ form_row(form.email) }}
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">Modifier l'identité</div>
    <div class="panel-body">
      {{ form_row(form.titre) }}
      {{ form_row(form.nom) }}
      {{ form_row(form.prenom) }}
      {{ form_row(form.adresse) }}
      {{ form_row(form.code_postal) }}
      {{ form_row(form.ville) }}
      {{ form_row(form.tel_domicile) }}
      {{ form_row(form.tel_portable) }}
      {{ form_row(form.secondary_email) }}
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">Vérifier le mot de passe</div>
    <div class="panel-body">
      {{ form_rest(form) }}
    </div>
  
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-7">
        <input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans }}" />
      </div>
    </div>
  </div>

  </div>
</form>
